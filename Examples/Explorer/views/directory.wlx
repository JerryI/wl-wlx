ContentList = ImportComponent["components/list.wlx"];

Files = <|

    "Name"     -> FileNameTake[#],
    "Kind"     -> FileType[#],
    "Size"     -> If[DirectoryQ[#], Missing[], FileSize[#]],
    "Modified" -> (Now - FileDate[#]),
    "Link"     -> FileNameToURLPath[#]
 
|>& /@ FileNames["*", $FirstChild]; 

<ContentList Data={Files}/> 